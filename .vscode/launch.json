{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with arguments",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--name", "Miguel", "--language", "German"]
        },
        {
            "name": "Python Debugger: Current File with arguments",
            "type": "python",
            "request": "launch",
            "program": "${workspace}",
            "console": "integratedTerminal",
            "args": [""]
        }
    ]
}